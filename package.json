{
  "name": "skid-inc",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "vue-cli-service build",
    "commit": "yarn lint && git-cz",
    "lint": "vue-cli-service lint",
    "netlify": "yarn build && http-server ./dist",
    "serve": "vue-cli-service serve --open",
    "test": "tsc -p tsconfig.test.json && ava --verbose"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "modern-normalize": "^0.4.0",
    "pluralize": "^7.0.0",
    "vue": "^2.5.13",
    "vue-class-component": "^6.0.0",
    "vue-property-decorator": "^6.0.0",
    "vue-tabs-component": "^1.4.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/pluralize": "^0.0.28",
    "@vue/cli-plugin-babel": "^3.0.0-beta.6",
    "@vue/cli-plugin-typescript": "^3.0.0-beta.6",
    "@vue/cli-service": "^3.0.0-beta.6",
    "ava": "^0.25.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "vue-template-compiler": "^2.5.13"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "ava": {
    "files": ["ts-build/test/**/*.js"],
    "modules": false
  }
}
